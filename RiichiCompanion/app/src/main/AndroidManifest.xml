<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.riichicompanion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/rc_launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/rc_launcher_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity
            android:name=".HandCalculatorActivity"
            android:label="Hand Calculator" />
        <activity
            android:name=".ScoreTrackerActivity"
            android:label="Game"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateGameActivity"
            android:label="Create Game"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:label="Riichi Companion">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>