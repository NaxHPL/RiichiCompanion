<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    style="@style/SelectableItemBackground_Light"
    android:layout_width="127dp"
    android:layout_height="50dp"
    android:clickable="true"
    android:focusable="true"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/ivClosedKan1"
        android:layout_width="38dp"
        android:layout_height="50dp"
        android:layout_marginStart="6dp"
        android:rotation="90"
        android:translationY="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivClosedKan2"
        android:layout_width="38dp"
        android:layout_height="50dp"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@+id/ivClosedKan1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivClosedKan3"
        android:layout_width="38dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@+id/ivClosedKan2"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>